@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<img class="wave" src="~/img/wave.png">
<div class="container1">
    <div class="img">
        <img src="~/img/bg.svg">
    </div>
    <div class="login-content">
        <form id="account" method="post">
            <h2 class="title">Welcome</h2>
           <div asp-validation-summary="All" style="color: #842029;background-color: #f8d7da;border-color: #f5c2c7; border-radius: 10px;"></div>
            <div class="input-div one" id="email">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div class="div">
                    <h5>Email</h5>
                    <input asp-for="Input.Email" class="input" autocomplete="username" required="required" />
                </div>
            </div>
            <div class="input-div pass" id="password">
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="div">
                    <h5>Password</h5>
                    <input asp-for="Input.Password" type="password" class="input" autocomplete="current-password" required="required" />
                </div>
            </div>
            <div class="form-check inline" style="display: block; margin-top: 10px; text-align: left; text-decoration: none; color: #999; font-size: 0.9rem;transition: .3s;">
                <label asp-for="Input.RememberMe" class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <input type="submit" class="btn btn-outline-primary" value="Login">
            <a style="display: block; text-align: right; text-decoration: none; font-size: 0.9rem;transition: .3s;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            <a style="display: block; text-align: left;  margin-top: -21px; text-decoration: none; font-size: 0.9rem;transition: .3s;" id="Register" asp-page="./Register">Register</a>
        </form>
    </div>
</div>

@if (Model.ModelState.ErrorCount >0 )
{
    <script type="text/javascript">
        document.getElementById("email").classList.add("focus");
    </script>
}
<script>
    const inputs = document.querySelectorAll(".input");

     function addcl(){
         let parent = this.parentNode.parentNode;
         parent.classList.add("focus");
     }

     function remcl(){
         let parent = this.parentNode.parentNode;
         if(this.value == ""){
             parent.classList.remove("focus");
         }
     }

     inputs.forEach(input => {
         input.addEventListener("focus", addcl);
         input.addEventListener("blur", remcl);
     });
</script>
<script src="https://kit.fontawesome.com/a81368914c.js"></script>

