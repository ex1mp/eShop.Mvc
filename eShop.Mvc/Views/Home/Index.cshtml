            <img src="~/img/metro.jpeg" class="d-block w-100" alt="asdasdasd" style="position: absolute;top: 0; left: 0;min-height: 400px;">
            </div>
            <div class="carousel-item" style="height:400px;">
            <img src="~/img/code-vein.jpg" class="d-block w-100" alt="asdasdasd" style="position: absolute;top: 0;left: 0; min-height: 400px;">
            </div>
            <div class="carousel-item" style="height:400px;">
            <img src="~/img/12.jpg" class="d-block w-100" alt="asdasdasd" style="position: absolute;top: 0;left: 0;min-height: 400px;">
            </div>*@
        @*<div class="carousel-item">
            <img src="~/img/693912.png" class="d-block w-100" alt="asdasdasd">
            </div>*@
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <div class="arrow-2" style="transform: scale(-1, 1);">
            <div class="arrow-2-top"></div>
            <div class="arrow-2-bottom"></div>
        </div>
        <span class="visually-hidden">Предыдущий</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <div class="arrow-2">
            <div class="arrow-2-top"></div>
            <div class="arrow-2-bottom"></div>
